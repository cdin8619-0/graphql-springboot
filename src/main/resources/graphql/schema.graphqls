type Query {
    getProducts: [Product]
    getProductsByCategory(category: String): [Product]
}

type Mutation {
    updateStock(productId: Int!, stock: Int!): Product
    receiveNewShipment(productId: Int!, quantity: Int!): Product
}

type Product {
    id: ID!
    name: String!
    description: String
    price: Float!
    category: String
    stock: Int!
}
